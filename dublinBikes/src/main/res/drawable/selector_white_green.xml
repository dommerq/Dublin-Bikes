<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadiusRatio="1" android:shape="rectangle">
            <solid android:color="@color/green_opacity" />

            <stroke android:width="1dp" android:color="#AAA" />

            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadiusRatio="1" android:shape="rectangle">
            <solid android:color="@color/white_opacity" />

            <stroke android:width="1dp" android:color="#AAA" />

            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>